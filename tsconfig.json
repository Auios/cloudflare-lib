{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2024",
    "module": "CommonJS",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strictNullChecks": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "allowJs": false,
    "isolatedModules": true,
    "allowImportingTsExtensions": false,

    /* Transpilation */
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    // "noEmit": true,

    /* Library Options */
    "declaration": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
