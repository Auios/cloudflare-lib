{
  "compilerOptions": {
    /* Base Options */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strictNullChecks": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "isolatedModules": true,

    /* Transpilation */
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    // "noEmit": true,

    /* Library Options */
    "declaration": true,

    /* Path Aliases */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
